{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": false,
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "ES2022",
    "target": "ES2022",
    "experimentalDecorators": true,
    "checkJs": true,
    "noEmit": true,
    "useDefineForClassFields": false
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src/**/*"],
  "types": ["lit"]
}
