{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": false,
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "ES2022",
    "target": "ES2022",
    "experimentalDecorators": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "useDefineForClassFields": false
  },
  "include": ["./src/**/*"],
  "types": ["lit"]
}
